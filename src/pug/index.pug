doctype html
html(lang="en")
  head
    title= project
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href='http://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    <style>body {margin: 0;color: #000; }.landing {min-height: 100vh;background: #000;color: #fff;font: 20px/1.3 "Open Sans", Verdana, Helvetica, Arial, sans-serif; }.landing-wrapper {max-width: 1600px; margin: 0 auto; padding: 20px; }.landing h1 {margin: 0 0 50px;font-size: 70px; }.pages-list {padding: 0;margin: 0 0 10px;list-style: none;position: relative;display: inline-block;font-size: 20px; }.pages-list li {display: block; }.pages-list a {transition: opacity .2s; text-decoration:none;color:#fff;opacity: .5; }.pages-list a:hover {opacity: 1;}</style>

  body.landing
    div.landing-wrapper
      h1 Project pages

      mixin page(pageName, url)
        li
          a(href = url
            target = '_blank')=pageName

      ul.pages-list
        +page('Homepage', 'homepage.html')
        +page('Technology', 'technology.html')
        +page('SDK Demo', 'sdk-tutorials.html')
        +page('Request SDK Demo', 'request-sdk-demo.html')
        +page('Contest Rules', 'contest-rules.html')
        +page('Terms of Use', 'terms.html')
        +page('Policy', 'policy.html')
        +page('Legacy: Licenses android', 'licenses_android.html')
        +page('App: Policy', 'policy-app.html')
        +page('App: Terms', 'terms-app.html')
        +page('App: Open Source Licenses', 'oss-app.html')
        +page('App: Policy MojiCam','policy-mojicam.html')
        each item in locals.tech
            +page(item.item + ": " + item.title, item.link+'.html')

        
