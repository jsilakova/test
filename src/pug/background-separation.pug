extends base/layout

block main-content
	- var currentCount = 9
	+sdk-description(currentCount)

block sdkDescriptionContent
	.section-content-block.mw-90
		p 
			= currentItem.preview
	.section-content-block
		h2 Features
		ul.content-list
			li Video background remover
			li Portrait and landscape mode
			li Bokeh effect
			li Post-processing: mating, filters, etc.
			li Real-time
	.section-content-block
		h2 Use cases
		.row
			.col-md-6
				h3 Video conferencing
				ul.content-list
					li Replace backgrounds during a business call 
					li Change an unsuitable background and remove noise

				h3 Entertainment
				ul.content-list
					li Removing unwanted objects or people from videos
					li Change a boring background to the jungle or beach

			.col-md-6
				h3 Advertising
				ul.content-list
					li Design custom backgrounds to promote your product
					li Take unique brand videos and design creative ad campaigns
				